<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.suseok.run.model.dao.ReplyDao">

  <!-- 댓글 추가 -->
  <insert id="insert">
    INSERT INTO reply (board_id, writer_seq, content)
    VALUES (#{boardId}, #{writerSeq}, #{content})
  </insert>

  <!-- 모든 댓글 조회 -->
  <select id="selectAll" resultType="com.example.domain.Reply">
    SELECT *
    FROM reply
  </select>

  <!-- 댓글 정보 업데이트 -->
  <update id="update">
    UPDATE reply
    SET content = #{content}
    WHERE id = #{id}
  </update>

  <!-- 댓글 삭제 -->
  <delete id="delete">
    DELETE FROM reply
    WHERE id = #{id}
  </delete>


</mapper>
