<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.suseok.run.model.dao.ActivityDao">

    <insert id="insertActivity">
        INSERT INTO activities (id, name, distance, moving_time)
        VALUES (#{id}, #{name}, #{distance}, #{movingTime})
    </insert>

    <select id="getAllActivities" resultType="com.example.strava.model.StravaActivity">
        SELECT * FROM activities
    </select>

</mapper>
