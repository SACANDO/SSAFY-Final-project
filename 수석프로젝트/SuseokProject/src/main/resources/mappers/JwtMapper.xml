<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.suseok.run.basic.model.dao.JwtDao">

    <insert id="insert" parameterType="JwtToken">
        INSERT INTO JwtTokens (user_id, refresh_token)
        VALUES (#{userId}, #{refreshToken})
    </insert>

    <delete id="deleteRefreshToken" parameterType="String">
        DELETE FROM JwtTokens WHERE user_id = #{userId}
    </delete>

    <select id="selectByUserId" parameterType="String" resultType="JwtToken">
        SELECT * FROM JwtTokens WHERE user_id = #{userId}
    </select>

</mapper>
