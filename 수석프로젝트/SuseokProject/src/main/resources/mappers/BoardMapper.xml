<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.suseok.run.basic.model.dao.BoardDao">
	<!-- 게시글 추가 -->
	<insert id="insert" parameterType="Board" keyProperty="boardId" useGeneratedKeys="true">
		INSERT INTO board (group_id, writer_seq, title, content, img,
		notice)
		VALUES (#{group_id}, #{writerSeq}, #{title}, #{content}, #{img}, #{notice})
	</insert>

	<!-- 모든 게시글 조회 -->
	<select id="selectAll" resultType="Board">
		SELECT *
		FROM board
	</select>

	<!-- 특정 ID의 게시글 조회 -->
	<select id="selectById" parameterType="int" resultType="Board">
		SELECT *
		FROM board
		WHERE id = #{id}
	</select>


	<!-- 게시글 업데이트 -->
	<update id="update">
		UPDATE board
		SET title = #{title}, content = #{content},	img = #{img}, notice = #{notice}
		WHERE id = #{id}
	</update>

	<!-- 게시글 삭제 -->
	<delete id="delete">
		DELETE FROM board
		WHERE id = #{id}
	</delete>
</mapper>
